%body
  %header
    = link_to 'GPT IELTS', root_path, class: 'logo'
    %nav
      %li= link_to 'History', exams_path
      - if user_signed_in?
        %li= link_to 'New exam', new_exam_path, data: { turbo: false }
        %li= link_to 'Users', users_path
        %li= link_to 'Edit user', edit_user_registration_path
        %li= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'logout-btn'
      - else
        %li= link_to 'Sign up', new_user_registration_path
        %li= link_to 'Log in', new_user_session_path
